<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kuaiyou.lucky.mapper.TaskMapper">

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, dtype, desc, amount, ctime, ctype, coins, status
    </sql>
    
    <select id="selectByDtype" resultType="com.kuaiyou.lucky.res.TaskRes">
    	SELECT *
    	FROM t_luck_task t
    	WHERE t.dtype = #{dtype}
    </select>

</mapper>
